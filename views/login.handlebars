<div class="row">

  <div class="col-md-6">
    {{!-- Login Form --}}
    <h2>Login</h2>
    <form class="form login-form">
      <div class="form-group">
        {{!-- Ask for user email --}}
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        {{!-- Ask for user password --}}
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        {{!-- Login button --}}
        <button class="btn" type="submit">Login</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    {{!-- Sign Up Form --}}
    <h2>Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group">
        {{!-- Ask user to add name --}}
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        {{!-- Ask user to add email --}}
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        {{!-- Ask user to create password --}}
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        {{!-- Ask user to create username --}}
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        {{!-- Ask user for their location --}}
        <label for="location-signup">Location:</label>
        <input class="form-input" type="text" id="location-signup" />
      </div>
      <div class="form-group">
        {{!-- Ask user to add bio --}}
        <label for="bio-signup">Bio:</label>
        <input class="form-input" type="text" id="bio-signup" />
      </div>
      <div class="form-group">
        {{!-- Sign up button --}}
        <button class="btn" type="submit">Sign Up</button>
      </div>
    </form>
  </div>

</div>
<script src="./js/login.js"></script>
